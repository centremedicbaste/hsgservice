<article id="{{proyecto.id}}" class="mbr-64 text-center ">
  <a href="{{ departamentos.url }}">
  <div class="row">
    <div class="col-xs-12  pb-40">
      <div class="rat-3-2">
        <div class="rat-content">
          <img class="rellax video-cover" data-rellax-percentage="0.5" data-rellax-speed="1"
            src="{{departamentos.data.image}} " alt="">
        </div>
      </div>
    </div>
  </div>
  <div class="row sm:text-center   ">
    <div class="col-xs-12  pl-40  sm:order-last  ">
      <div class="mb-16 ">
          <div class=" mb-16">
            <p    class="fluid-6-b accent">
              {{departamentos.data.title}}
            </p>
          </div>
          <div class=" mbr-64">
            <p    class="p1 c-dark-grey">
              {{departamentos.data.descripcion}}
            </p>
          </div>
      </div>
    </div>
  </div>
</a>
</article>